<rml>
	<head>
		<title>Demo</title>
		<link type="text/template" href="window.rml" />
		<style>
			body
			{
			width: 325px;
			height: 580px;

			margin: auto;
			}

			div#title_bar div#icon
			{
			display: none;
			}

			div#content
			{
			text-align: left;
			}

			progressbar
			{
			display: block;
			width: auto;
			height: 30px;
			background: #000000;
			padding: 5px;
			}

			progressfill
			{
			display: block;
			height: 100%;
			background: #efbf00;
			}

			deco
			{
			display: block;
			width: 64px;
			height: 16px;

			deco-decorator: mydecorator;
			deco-image-src: high_scores_defender.png;
			}
		</style>
	</head>
	<body template="window">
		<deco />
		<p>
			Progress bar:
			<progressbar id="a_progressbar"/>
			<p>
				<form onsubmit="ChangeProgressOnSubmit(event);">
					Set progress:
					<input name="progress" type="range" min="0" max="100" step="1" onchange="Slider_OnValueChanged(event);"/>
					<input type="submit" value="sub_progress">Submit</input>
				</form>
			</p>
		</p>
		<button onclick="Send_setprogress_Event();">Dispatch Event</button>
		<button onclick="DetachProgListener();">Detach listener</button>
		<button onclick="Element@ a; a.GetId();">Cause Exception</button>
		<button onclick="CloseDoc();">Close</button>
		<dataselect source="scripted_data.numbers" fields="name,value" valuefield="value" onchange="DSChanged(event)" />
		<datagrid source="scripted_data.numbers">
			<col fields="name" width="35%">Item:</col>
			<col fields="value" width="28%">Index:</col>
			<col fields="value" width="37%" formatter="Format_IndexPlusOne">+1 (formatter):</col>
		</datagrid>
		<button onclick="CreateTextElement(event.GetType()); ChangeProgressRand(25,75);">Scripted Button</button>
		<tabset>
			<tab>Tab1</tab>
			<panel id="text_target">
			Captured Events: 
			</panel>
			<tab>Tab2</tab>
			<panel>
				The second panel :)
			</panel>
		</tabset>
	</body>
</rml>
