<rml>
	<head>
		<title>Demo</title>
		<link type="text/template" href="window.rml" />
		<style>
			body
			{
			width: 300px;
			height: 225px;

			margin: auto;
			}

			div#title_bar div#icon
			{
			display: none;
			}

			div#content
			{
			text-align: left;
			}
			
			progressbar
			{
			display: block;
			width: auto;
			height: 30px;
			background: #000000;
			padding: 5px;
			}

			progressfill
			{
			display: block;
			height: 100%;
			background: #efbf00;
			}
		</style>
	</head>
	<body template="window">
		This is a sample.
		<progressbar id="a_progressbar"/>
		<button onclick="CreateTextElement(event.GetType()); ChangeProgressRand(25,75);">Scripted Button</button>
		<button onclick="ChangeProgressRand(0,25)">Another Button</button>
		<button onclick="Element@ a; a.GetId();">Script Exception</button>
		<button onclick="CloseDoc();">Close</button>
	</body>
</rml>
